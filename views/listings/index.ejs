
  <% layout("/layouts/boilerplate") %>

<style>
  #filters{
    display: flex;
    margin-left: -2.5rem;
  
   
  }


  .filter{
    display: flex;
    flex-direction: column;
    font-size: 10px;
    margin-left: 2.5rem;
    margin-top: 1.5rem;
    opacity: 0.7;
  }

  .filter:hover{
    opacity: 1;
  }

  .filter i{
    font-size: 17px;
    margin-left: 0.5rem;
  }

  .tax-switch{

    display: flex;
    align-items: center;
    justify-content: center;
    height: 3.25rem;
    width: 17rem;
    margin-top: 0.5rem;
    margin-left: 5rem;
    border: 1px solid black;
    border-radius: 1rem;
  }

  .tax-Info{
    display: none;
  }
</style>

   <div id="filters">
    <div class="filter">
      <i class="fa-solid fa-fire"></i>
      Trending
    </div>
    <div class="filter">
      <i class="fa-solid fa-umbrella-beach"></i>
      Beach
    </div>
    <div class="filter">
      <i class="fa-solid fa-person-swimming"></i>
      Pool
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain"></i>
      Mountain
    </div>
    <div class="filter">
      <i class="fa-solid fa-mountain-city"></i>
     Mountain city
    </div>
    <div class="filter">
      <i class="fa-solid fa-bed"></i>
      Rooms
    </div>
    <div class="filter">
      <i class="fa-solid fa-hotel"></i>
     Hotel
    </div>
    <div class="filter">
      <i class="fa-solid fa-tree-city"></i>
      Tree-city
    </div>
    <div class="filter">
      <i class="fa-solid fa-house"></i>
     House
    </div>
    <div class="filter">
      <i class="fa-brands fa-fort-awesome"></i>
      Castles
    </div>
    <div class="filter">
      <i class="fa-solid fa-igloo"></i>
      Domes
    </div>
    <div class="tax-switch">
      <div class="form-check form-switch form-check-reverse">
        <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
      </div>
    </div>
   </div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4">
      <% for (let listing of allListings) {%>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col listing-card" >
          <img src="<%= listing.image.url %>" style="height: 20rem;" class="card-img-top" alt="listing_image">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text"><b><%= listing.title %></b><br/>
              &#8377; <%= listing.price.toLocaleString("en-IN")%> /night
              &nbsp;&nbsp;<i class="tax-Info">+18% GST</i>
            </p>
          </div>
        </div>
      </a>
        <% } %>
    </div>

    <script>
      let taxToggle=document.getElementById("flexSwitchCheckDefault");
      taxToggle.addEventListener("click",()=>{
        let taxInfo=document.getElementsByClassName("tax-Info");
        for(info of taxInfo){
          if(info.style.display!="inline"){
            info.style.display="inline";
          }
          else{
            info.style.display="none";
          }
        }
      })
    </script>

